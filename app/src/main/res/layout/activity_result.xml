<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Que penses-tu de l'ascendion de Skywalker ?"
        android:textSize="12pt"
        android:layout_margin="10pt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAverageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moyenne :"
                android:textSize="8pt"
                android:layout_marginLeft="25pt"/>

            <TextView
                android:id="@+id/tvStdDeviationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ã‰cart type :"
                android:textSize="8pt"
                android:layout_marginLeft="25pt"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAverageValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.51"
                android:textSize="8pt"
                android:layout_marginLeft="30pt"/>

            <TextView
                android:id="@+id/tvStdDeviationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.88"
                android:textSize="8pt"
                android:layout_marginLeft="30pt"/>

        </LinearLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:layout_margin="10pt"
        />

</LinearLayout>